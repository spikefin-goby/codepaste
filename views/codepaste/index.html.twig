{% extends "/layout.html.twig" %}


{% block content %}
<div class="container">
<form class="form-horizontal" role="form" action="/paste" method="post">
    <div class="form-group">
    <textarea class="form-control" rows="15" placeholder="Input your code" name="code" required="required"></textarea>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-0 col-lg-10">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn">キャンセル</button>
        </div>
    </div>
</form>
</div> <!-- /container -->


<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="//code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="{{ app.request.basePath }}/assets/js/bootstrap.min.js"></script>
{% endblock %}
